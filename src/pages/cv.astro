---
import { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("de");
---

<Layout>
  <main>
    <div class="px-2 py-8 sm:px-4 lg:px-0">
      <div class="mx-auto flex max-w-4xl flex-col">
        <h1 id="cv" class="text-3xl font-bold">{t("cv.title")}</h1>

        <div class="mt-4 space-y-4 rounded-lg border border-slate-200 bg-slate-100 p-4 dark:border-neutral-700 dark:bg-neutral-800">
          <div class="flex">
            <div class="w-40 font-light">seit 2019</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-medium">{t("cv.first.title")}</div>
            </div>
          </div>
          <hr class="dark:border-neutral-600" />
          <div class="flex">
            <div class="w-40 font-light">2019-2023</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-medium">{t("cv.second.title")}</div>
              <p class="mt-0.5 text-sm opacity-80">
                {t("cv.second.content")}
              </p>
            </div>
          </div>
          <hr class="dark:border-neutral-600" />
          <div class="flex">
            <div class="w-40 font-light">2018-2019</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-medium">{t("cv.third.title")}</div>
              <p class="mt-0.5 text-sm opacity-80">{t("cv.third.content")}</p>
            </div>
          </div>
          <hr class="dark:border-neutral-600" />
          <div class="flex">
            <div class="w-40 font-light">2016-2019</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-medium">{t("cv.fourth.title")}</div>
              <p class="mt-0.5 text-sm opacity-80">{t("cv.fourth.content")}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
