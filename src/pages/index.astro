---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import PlaceholderImage from "../assets/placeholder.jpeg";
import ProfilePicture from "../assets/images/profilbild.png";
import StockWeb from "../assets/images/stock_web.webp";
import StockApp from "../assets/images/stock_app.webp";
import StockServer from "../assets/images/server.webp";
import { PROJECTS } from "../data/projects";
import HtmlIcon from "../assets/techicons/htmlicon.png";
import ExpoIcon from "../assets/techicons/expo-light.png";
import FlutterIcon from "../assets/techicons/flutter.png";
import CssIcon from "../assets/techicons/css.png";
import JsIcon from "../assets/techicons/js.png";
import ReactIcon from "../assets/techicons/react.png";
import VueIcon from "../assets/techicons/vue.png";
import TailwindIcon from "../assets/techicons/tailwind.png";
import AngularIcon from "../assets/techicons/angular.png";
import BootstrapIcon from "../assets/techicons/bootstrap.png";
import StrapiIcon from "../assets/techicons/strapi.png";
import JqueryIcon from "../assets/techicons/jquery.png";
import NextIcon from "../assets/techicons/next.png";
import AstroIcon from "../assets/techicons/astro.png";
import FirebaseIcon from "../assets/techicons/firebase.png";
import MongoIcon from "../assets/techicons/mongo.png";
import TrpcIcon from "../assets/techicons/trpc.png";
import IonicIcon from "../assets/techicons/ionic.png";
import SqlIcon from "../assets/techicons/sql.png";
import GraphqlIcon from "../assets/techicons/graphql.png";
import NodeIcon from "../assets/techicons/node.png";
import ExpressIcon from "../assets/techicons/express.png";
import TechCircle from "../components/TechCircle.astro";
import { Trans } from "astro-i18next/components";
import { t, changeLanguage } from "i18next";

changeLanguage("de");

export const prerender = true;
---

<Layout>
  <main>
    <div class="h-80 sm:h-96 flex items-center bg-slate-100 dark:bg-neutral-800 border-b dark:border-b-neutral-700 sm:px-4 lg:px-0">
      <div class="flex flex-row mx-auto max-w-6xl w-full justify-between items-center space-x-12">
        <div>
          <h1 class="font-extrabold text-4xl sm:text-5xl max-w-xl text-center sm:text-left">
            <Trans i18nKey="home.title">
              <div class="text-blue-800 dark:text-blue-400 flex"></div>
            </Trans>
          </h1>

          <a href="/contact" class="mt-8 bg-slate-900 dark:bg-white dark:text-black dark:hover:bg-neutral-300 text-white hover:bg-slate-700 sm:w-auto w-full h-12 py-2.5 px-5 inline-flex items-center justify-center rounded-md font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none">{t("home.action-btn")}</a>
        </div>
        <div class="hidden sm:block">
          <Image loading="eager" class="rounded-md w-64" width={800} src={ProfilePicture} alt="Platzhalter" />
        </div>
      </div>
    </div>

    <div>
      <div class="mx-auto sm:max-w-6xl flex sm:flex-row flex-col h-full justify-between items-center mt-5 sm:my-20 w-full sm:px-4 lg:px-0 px-0">
        <div class="flex flex-col h-full justify-center sm:px-0 px-2">
          <h1 class="text-2xl sm:text-4xl font-extrabold">{t("home.frontend.title")}</h1>
          <p class="max-w-xl opacity-80 my-2 sm:my-4">{t("home.frontend.content")}</p>

          <div class="max-w-xl sm:flex flex-wrap gap-2">
            <TechCircle name="HTML" img={HtmlIcon} />
            <TechCircle name="CSS" img={CssIcon} />
            <TechCircle name="JavaScript" img={JsIcon} />
            <TechCircle name="jQuery" img={JqueryIcon} />
            <TechCircle name="React" img={ReactIcon} />
            <TechCircle name="Vue" img={VueIcon} />
            <TechCircle name="Angular" img={AngularIcon} />
            <TechCircle name="Tailwind" img={TailwindIcon} />
            <TechCircle name="Bootstrap" img={BootstrapIcon} />
            <TechCircle name="Next.js" img={NextIcon} />
            <TechCircle name="Astro" img={AstroIcon} />
          </div>
        </div>

        <div class="items-center h-full sm:mt-0 mt-4 hidden sm:flex">
          <Image loading="eager" class="sm:rounded-md mb-2" width={500} src={StockWeb} alt={"Webtechnologie Stock Image"} />
        </div>
      </div>

      <div class="mx-auto max-w-6xl flex flex-col sm:flex-row-reverse h-full justify-between items-center sm:my-20 mt-5 sm:px-4 lg:px-0 px-0">
        <div class="flex flex-col h-full justify-center px-2 lg:px-0">
          <h1 class="text-xl sm:text-4xl font-extrabold">{t("home.mobile.title")}</h1>
          <p class="max-w-xl opacity-80 my-2 sm:my-4">{t("home.mobile.content")}</p>

          <div class="max-w-xl sm:flex flex-wrap gap-2">
            <TechCircle name="Flutter" img={FlutterIcon} />
            <TechCircle name="React Native" img={ReactIcon} />
            <TechCircle name="Expo" img={ExpoIcon} />
            <TechCircle name="Ionic" img={IonicIcon} />
            <TechCircle name="Firebase" img={FirebaseIcon} />
          </div>
        </div>

        <div class="hidden sm:flex items-center h-full">
          <Image class="rounded-md mb-2" width={500} src={StockApp} alt={"Webtechnologie Stock Image"} />
        </div>
      </div>

      <div class="mx-auto max-w-6xl flex flex-col sm:flex-row h-full justify-between sm:my-20 items-center my-5 sm:px-4 lg:px-0 px-0">
        <div class="flex flex-col h-full justify-center sm:px-0 px-2">
          <h1 class="text-xl sm:text-4xl font-extrabold">{t("home.backend.title")}</h1>
          <p class="max-w-xl opacity-80 my-2 sm:my-4">{t("home.backend.content")}</p>

          <div class="max-w-xl sm:flex flex-wrap gap-2">
            <TechCircle name="Node.js" img={NodeIcon} />
            <TechCircle name="Express" img={ExpressIcon} />
            <TechCircle name="Strapi" img={StrapiIcon} />
            <TechCircle name="SQL" img={SqlIcon} />
            <TechCircle name="GraphQL" img={GraphqlIcon} />
            <TechCircle name="tRPC" img={TrpcIcon} />
            <TechCircle name="MongoDB" img={MongoIcon} />
          </div>
        </div>

        <div class="hidden sm:flex items-center h-full">
          <Image class="rounded-md mb-2" width={500} src={StockServer} alt={"Webtechnologie Stock Image"} />
        </div>
      </div>
    </div>

    <div class="py-8 bg-slate-100 dark:bg-neutral-800 border-y dark:border-y-neutral-700 sm:px-4 lg:px-0 px-2">
      <div class="mx-auto max-w-6xl flex sm:flex-row flex-col justify-between h-full">
        <div class="flex flex-col h-full">
          <h2 class="font-extrabold text-4xl">{t("home.aboutme.title")}</h2>

          <Trans i18nKey="home.aboutme.content">
            <p class="opacity-80 sm:mt-4 mt-2 max-w-xl"></p>
            <p class="opacity-80 my-4 max-w-xl"></p>
          </Trans>
        </div>

        <div class="sm:pt-10">
          <div class="flex flex-col w-full space-y-8">
            <div class="flex flex-col justify-center">
              <div class="text-blue-800 dark:text-blue-400 uppercase font-semibold text-sm">{t("home.experience")}</div>
              <div>{t("home.experience-value")}</div>
            </div>

            <div class="flex flex-col justify-center">
              <div class="text-blue-800 dark:text-blue-400 uppercase font-semibold text-sm">FREELANCER</div>
              <div>{t("home.freelancer-value")}</div>
            </div>

            <div class="flex flex-col justify-center">
              <div class="text-blue-800 dark:text-blue-400 uppercase font-semibold text-sm">SPRACHEN</div>
              <div>{t("home.language-german")}, {t("home.language-english")}</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="py-8 sm:px-4 lg:px-0 px-2">
      <div class="mx-auto max-w-6xl flex flex-col">
        <h2 id="projects" class="font-extrabold text-4xl">{t("home.projects.title")}</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 mt-4 gap-4 sm:gap-8">
          <div class="flex flex-row justify-between bg-slate-100 dark:bg-neutral-800 dark:border-neutral-700 border-slate-200 border px-4 pb-4 rounded-lg col-span-1 sm:col-span-2">
            <div class="flex flex-col justify-end">
              <div class="mt-4">{t("home.projects.rewe.title")}</div>
              <p class="opacity-80 text-sm">{t("home.projects.rewe.content")}</p>
            </div>

            <div class="w-full overflow-hidden flex justify-end">
              <Image width={200} src={PROJECTS.REWE.image} alt={PROJECTS.REWE.name + " Logo"} class="mt-4 rounded-sm" />
            </div>
          </div>

          <div class="flex flex-col bg-slate-100 border-slate-200 dark:bg-neutral-800 dark:border-neutral-700 border px-4 pb-4 rounded-lg col-span-1">
            <div class="w-full h-40 overflow-hidden">
              <Image height={400} width={300} src={PROJECTS.WHIZZPER.image} alt={PROJECTS.WHIZZPER.name + " Logo"} class="mt-4 mx-auto rounded-md" />
            </div>
            <div class="mt-4">{t("home.projects.whizzper.title")}</div>
            <p class="opacity-80 text-sm">{t("home.projects.whizzper.content")}</p>
          </div>

          <div class="flex flex-col bg-slate-100 border-slate-200 dark:bg-neutral-800 dark:border-neutral-700 border px-4 pb-4 rounded-lg col-span-1">
            <div class="w-full h-40 overflow-hidden">
              <Image height={150} width={150} src={PROJECTS.PRIMAL.image} alt={PROJECTS.PRIMAL.name + " Logo"} class="mt-4 mx-auto rounded-sm" />
            </div>
            <div class="mt-4">{t("home.projects.primalfm.title")}</div>
            <p class="opacity-80 text-sm">{t("home.projects.primalfm.content")}</p>
          </div>

          <div class="flex flex-col bg-slate-100 border-slate-200 dark:bg-neutral-800 dark:border-neutral-700 border pb-4 px-4 rounded-lg col-span-1">
            <div class="w-full overflow-hidden">
              <Image height={300} width={300} src={PROJECTS.MWAY.image} alt={PROJECTS.MWAY.name + " Logo"} class="mt-4 mx-auto rounded-sm" />
            </div>
            <div class="mt-4">{t("home.projects.mway.title")}</div>
            <p class="opacity-80 text-sm">{t("home.projects.mway.description")}</p>
          </div>

          <div class="flex flex-col bg-slate-100 border-slate-200 dark:bg-neutral-800 dark:border-neutral-700 border px-4 pb-4 rounded-lg col-span-1">
            <div class="w-full overflow-hidden">
              <Image height={300} width={300} src={PROJECTS.VERMIETERLUPE.image} alt={PROJECTS.VERMIETERLUPE.name + " Logo"} class="mt-4 mx-auto rounded-sm" />
            </div>
            <div class="mt-4">{t("home.projects.vermieterlupe.title")}</div>
            <p class="opacity-80 text-sm">{t("home.projects.vermieterlupe.content")}</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
