<button id="toggleButton">
  <div class="h-4 w-4 rounded-full bg-neutral-200 dark:bg-neutral-800"></div>
</button>
<script>
  const button = document.getElementById("toggleButton");

  const getThemeCurrent = () => localStorage.getItem("theme");

  button!.addEventListener("click", () => {
    const currentTheme = getThemeCurrent();
    if (currentTheme === "light") {
      document.documentElement.classList.add("dark");
      localStorage.setItem("theme", "dark");
    } else if (currentTheme === "dark") {
      document.documentElement.classList.remove("dark");
      localStorage.setItem("theme", "light");
    }
    const updatedTheme = getThemeCurrent();
    button!.textContent = updatedTheme === "light" ? "🌙" : "☀️";
    localStorage.setItem("theme", updatedTheme || "light");
  });

  const theme = localStorage.getItem("theme");

  button!.textContent = theme === "light" ? "🌙" : "☀️";
</script>
