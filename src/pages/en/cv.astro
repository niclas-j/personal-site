---
import { changeLanguage, t } from "i18next";
import Layout from "../../layouts/Layout.astro";

changeLanguage("en");

export const prerender = true;
---

<Layout>
  <main>
    <div class="py-8">
      <div class="mx-auto max-w-4xl flex flex-col">
        <h1 id="cv" class="font-bold text-3xl">{t("cv.title")}</h1>

        <div class="bg-slate-100 border-slate-200 dark:border-neutral-700 dark:bg-neutral-800 rounded-lg space-y-4 p-4 mt-4 border">
          <div class="flex">
            <div class="w-40 font-light">seit 2019</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-semibold">{t("cv.first.title")}</div>
            </div>
          </div>
          <hr class="dark:border-neutral-600" />
          <div class="flex">
            <div class="w-40 font-light">2019-2023</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-semibold">{t("cv.second.title")}</div>
              <p class="opacity-60 text-sm mt-0.5">
                {t("cv.second.content")}
              </p>
            </div>
          </div>
          <hr class="dark:border-neutral-600" />
          <div class="flex">
            <div class="w-40 font-light">2018-2019</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-semibold">{t("cv.third.title")}</div>
              <p class="opacity-60 text-sm mt-0.5">{t("cv.third.content")}</p>
            </div>
          </div>
          <hr class="dark:border-neutral-600" />
          <div class="flex">
            <div class="w-40 font-light">2016-2019</div>
            <div class="flex flex-col">
              <div class="font-bold dark:font-semibold">{t("cv.fourth.title")}</div>
              <p class="opacity-60 text-sm mt-0.5">{t("cv.fourth.content")}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
